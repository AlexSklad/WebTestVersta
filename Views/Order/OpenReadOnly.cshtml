@model WebTestVersta.Models.Order
<h4>Информация по заказу</h4>

<div class="edit-block">
    @using (Html.BeginForm("OpenReadOnly", "Order"))

    {
        <div class="dataBox">
            <label>Номер заказа</label><br />
            @Html.TextBoxFor(o => o.OrderNum, new { @readonly = "readonly" })
        </div>
        <div class="dataBox">
            <label>Город отправителя</label><br />
            @Html.TextBoxFor(o => o.Sender.SenderCity, new { @readonly = "readonly" })
        </div>
        <div class="dataBox">
            <label>Адрес отправителя</label><br />
            @Html.TextBoxFor(o => o.Sender.SenderAddress, new { @readonly = "readonly" })
        </div>
        <div class="dataBox">
            <label>Город получателя</label><br />
            @Html.TextBoxFor(o => o.Rec.RecCity, new { @readonly = "readonly" })
        </div>
        <div class="dataBox">
            <label>Адрес получателя</label><br />
            @Html.TextBoxFor(o => o.Rec.RecAddress, new { @readonly = "readonly" })
        </div>
        <div class="dataBox">
            <label>Вес груза</label><br />
            @Html.TextBoxFor(o => o.CargoWeight, new { @readonly = "readonly" })
        </div>
        <div class="dataBox">
            <label>Дата забора груза</label><br />
            @Html.TextBoxFor(o => o.ReturnDateToDisplay, new { @readonly = "readonly" })
        </div>


    }
</div>
<div>
    <a asp-controller="Order" asp-action="IndexOrders">Back to List</a>
</div>
